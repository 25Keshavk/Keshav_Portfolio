---
import Section from "./Section.astro";
import { Image } from "astro:assets";

interface Props {
  photography: {
    description: string;
    images: Array<{
      src: string;
      alt: string;
    }>;
  };
}

const { photography } = Astro.props;
---

<Section text="Photography" href="photography">
  <div class="mb-8">
    <p class="mb-8 text-base text-neutral">
      {photography.description}
    </p>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      {
        photography.images.map((image) => (
          <div class="overflow-hidden rounded-lg border border-neutral/20">
            <img
              class="h-96 w-full object-cover transition-transform hover:scale-105"
              src={image.src}
              alt={image.alt}
            />
          </div>
        ))
      }
    </div>
  </div>
</Section>

