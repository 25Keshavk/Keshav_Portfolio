---
import Section from "./Section.astro";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & { hero: HeroProps };

const { description, images, hero } = Astro.props;
const { name, specialty, summary, email } = hero;
---

<section class="py-6 md:py-8">
  <h1
    class="mb-1 font-serif text-3xl font-bold tracking-tight text-white sm:text-4xl md:text-5xl"
  >
    {name}
  </h1>
  {specialty && <p
    class="mb-3 font-serif text-xl leading-tight font-bold tracking-tight text-primary sm:text-2xl md:text-2xl"
  >
    {specialty}
  </p>}
  <p class="mb-6 text-sm font-normal text-neutral md:text-base">
    {summary}
  </p>
  <a
    class="inline-block rounded-full bg-primary px-6 py-3 text-xs leading-5 font-medium text-[#fff]"
    href={`mailto:${email}`}>Get in Touch</a>
</section>

<Section text="About Me" href="about">
  <div class="flex flex-col gap-10">
    <p class="w-full text-base leading-relaxed text-neutral whitespace-pre-line">
      {description}
    </p>

    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
      {
        images.map((image, index) => (
          <div class="aspect-square overflow-hidden rounded-xl border border-neutral/20 shadow-sm md:aspect-[4/5]">
            <img
              class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
              src={image}
              alt={`${name} - Photo ${index + 1}`}
            />
          </div>
        ))
      }
    </div>
  </div>
</Section>
