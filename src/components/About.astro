---
import Section from "./Section.astro";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, images, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col gap-10">
    <p class="w-full text-base leading-relaxed text-neutral whitespace-pre-line">
      {description}
    </p>
    
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
      {
        images.map((image, index) => (
          <div class="aspect-square overflow-hidden rounded-xl border border-neutral/20 shadow-sm md:aspect-[4/5]">
            <img
              class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
              src={image}
              alt={`${name} - Photo ${index + 1}`}
            />
          </div>
        ))
      }
    </div>
  </div>
</Section>
