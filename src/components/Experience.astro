---
import Section from "./Section.astro";
import type { ExperienceProps } from "@types";

interface Props {
  experience: ExperienceProps[];
}

const { experience } = Astro.props;
---

<Section text="Work Experience" href="experience">
  {
    experience.map(({ company, position, startDate, endDate, summary }) => (
      <div class="mb-8 border-b border-neutral/20 pb-8 last:border-0 last:pb-0">
        <div class="mb-2 flex flex-col justify-between sm:flex-row sm:items-baseline">
          <h3 class="font-serif text-2xl font-semibold text-white">
            {company}
          </h3>
          <span class="text-sm text-white/70">
            {startDate === endDate ? startDate : `${startDate} â€” ${endDate}`}
          </span>
        </div>
        
        <h4 class="mb-3 font-serif text-lg font-medium text-primary">
          {position}
        </h4>
        
        <p class="text-base italic text-neutral/90">
          {Array.isArray(summary) ? summary[0] : summary}
        </p>
      </div>
    ))
  }
</Section>
