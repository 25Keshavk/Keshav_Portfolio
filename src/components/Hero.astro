---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="py-12 md:py-16" id="#hero">
  <h1
    class="mb-1 font-serif text-3xl font-bold tracking-tight text-white sm:text-4xl md:text-5xl"
  >
    {name}
  </h1>
  <p
    class="mb-3 font-serif text-xl leading-tight font-bold tracking-tight text-primary sm:text-2xl md:text-2xl"
  >
    {specialty}
  </p>
  <p class="mb-6 text-sm font-normal text-neutral md:text-base">
    {summary}
  </p>
</section>
