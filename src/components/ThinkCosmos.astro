---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ThinkCosmosProps } from "@types";

interface Props {
  thinkCosmos: ThinkCosmosProps;
}

const { thinkCosmos } = Astro.props;
---

<Section text="Think Cosmos" href="think-cosmos">
  <div class="rounded-2xl border border-neutral/20 bg-[#1c232d]/50 p-8">
    <div class="flex flex-col gap-8 md:flex-row md:gap-8">
      <!-- Left side: Description (1/4 to 1/2 of page) -->
      <div class="md:w-[45%]">
        <p class="text-base leading-relaxed text-neutral">
          {thinkCosmos.description}
        </p>
      </div>
      
      <!-- Right side: Grid image layout (1/2 of page) -->
      <div class="md:w-[55%]">
        <div class="grid grid-cols-2 gap-4">
          {
            thinkCosmos.images.map((image, index) => (
              <div class="aspect-video overflow-hidden rounded-lg border border-neutral/20 shadow-lg">
                <img
                  class="h-full w-full object-cover transition-transform hover:scale-105"
                  src={image}
                  alt={`Think Cosmos ${index + 1}`}
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</Section>

