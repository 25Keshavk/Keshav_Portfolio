---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, images, linkPreview, linkSource }) => {
      return (
        <div class="mb-20 rounded-2xl border border-neutral/20 bg-[#1c232d]/50 p-8">
          <div class="flex flex-col gap-8 md:flex-row md:gap-8">
            <!-- Left side: Title + Description (35% width) -->
            <div class="md:w-[35%]">
              <h3 class="mb-4 font-serif text-3xl font-medium text-primary">
                {name}
              </h3>
              
              <p class="mb-6 text-base leading-relaxed text-neutral">{summary}</p>
              
              {(linkSource || linkPreview) && (
                <div class="flex gap-5 text-white">
                  {linkSource && (
                    <a
                      href={linkSource}
                      target="_blank"
                      class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                    >
                      Source
                    </a>
                  )}
                  {linkPreview && (
                    <a
                      href={linkPreview}
                      target="_blank"
                      class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                    >
                      Preview
                    </a>
                  )}
                </div>
              )}
            </div>
            
            <!-- Right side: Grid image layout (65% width) -->
            <div class="md:w-[65%]">
              <div class={`grid gap-4 ${images.length <= 2 ? "grid-cols-1" : "grid-cols-2"}`}>
                {
                  images.map((image, index) => (
                    <div class="aspect-video overflow-hidden rounded-lg border border-neutral/20 shadow-lg">
                      <img
                        class="h-full w-full object-cover transition-transform hover:scale-105"
                        src={image}
                        alt={`${name} ${index + 1}`}
                      />
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      );
    })
  }
</Section>
