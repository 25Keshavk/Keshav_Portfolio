---
import Section from "./Section.astro";
import { Image } from "astro:assets";

interface Props {
  rockClimbing: {
    description: string;
    image: string;
  };
}

const { rockClimbing } = Astro.props;
---

<Section text="Rock Climbing" href="rock-climbing">
  <div class="flex flex-col items-center gap-8 md:flex-row md:gap-8">
    <div class="w-full md:w-[35%]">
      <p class="text-base leading-relaxed text-neutral">
        {rockClimbing.description}
      </p>
    </div>
    
    <div class="w-full md:w-[65%] overflow-hidden rounded-xl border border-neutral/20">
      <img
        class="h-[800px] w-full object-cover object-center"
        src={rockClimbing.image}
        alt="Rock climbing"
      />
    </div>
  </div>
</Section>

