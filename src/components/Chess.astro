---
import Section from "./Section.astro";

interface Props {
  chess: {
    description: string;
    images: string[];
  };
}

const { chess } = Astro.props;
---

<Section text="Chess" href="chess">
  <div class="mb-8">
    <p class="mb-6 text-base text-neutral">
      {chess.description}
    </p>
    <a
      href="https://www.chess.com/member/bigbrainedmattress/stats/rapid?days=0"
      target="_blank"
      rel="noopener noreferrer"
      class="mb-6 inline-block rounded-lg bg-primary px-5 py-2.5 text-sm font-semibold text-white transition-opacity hover:opacity-80"
    >
      Profile
    </a>
    <div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
      {
        chess.images.map((image, index) => (
          <div class="overflow-hidden rounded-xl border border-neutral/20">
            <img
              class="h-64 w-full object-cover md:h-96"
              src={image}
              alt={`Chess photo ${index + 1}`}
            />
          </div>
        ))
      }
    </div>
  </div>
</Section>

